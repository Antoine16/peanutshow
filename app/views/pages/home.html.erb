          <%= image_tag "bank.png" %>
        </div>
          <h5 class="need text-center">Avoir une carte de crédit</h5>
      </div>
      <div class="bloc-requieres col-xs-24 col-sm-12 col-md-6">
        <div class="icon-requisites text-center">
