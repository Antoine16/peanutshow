<div class="banner container-fluid text-center" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.1) 50%),url(https://images.unsplash.com/photo-1452804882841-573355623310?dpr=1&amp;auto=format&amp;fit=crop&amp;w=1500&amp;h=1000&amp;q=80&amp;cs=tinysrgb&amp;crop=); background-size: cover;">

  <div class="parent margin-clear col-sm-4 col-sm-offset-4 box">
    <div class="form-style-5 margin-side">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, label: "Email :", required: false, autofocus: true, placeholder: "nom@email.com" %>
          <%= f.input :password, label: "Mot de passe :", required: false, placeholder: "********" %>
          <%= f.input :remember_me,label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Accéder à mon compte" %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
