        <div class="form-inputs">
          <%= f.input :comment, label: "Un avis", autofocus: true, placeholder: "Des commentaires ? Des suggestions ? Allez-y, c'est ici !" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Valider" %>
        </div>
      <% end %>
    </div>
